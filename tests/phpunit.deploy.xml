<?xml version="1.0" encoding="UTF-8"?>

<phpunit bootstrap="Bootstrap.php" colors="true">
    <testsuites>
        <testsuite name="Most">
            <directory>./</directory>
        </testsuite>
    </testsuites>

    <filter>
        <whitelist>
            <directory suffix=".php">../src/</directory>
            <exclude>
                <directory suffix=".phtml">../view/</directory>
            </exclude>
        </whitelist>
    </filter>

    <php>
        <var name="APPLICATION_ENVIRONMENT" value="production" />
    </php>

</phpunit>
