<?xml version="1.0" encoding="UTF-8"?>

<phpunit bootstrap="Bootstrap.php" colors="true">
    <testsuites>
        <testsuite name="Most">
            <directory>./</directory>
        </testsuite>
    </testsuites>

    <filter>
        <whitelist>
            <directory suffix=".php">../src/</directory>
            <exclude>
                <directory suffix=".phtml">../view/</directory>
            </exclude>
        </whitelist>
    </filter>

    <php>
        <var name="DB_DSN" value="mysql:dbname=althingi_test;host=db" />
        <var name="DB_USER" value="root" />
        <var name="DB_PASSWD" value="" />
        <var name="DB_DBNAME" value="althingi_test" />
    </php>

</phpunit>
